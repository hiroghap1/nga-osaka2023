      object-fit: cover;
      width: 100%;
      height: 100%;
    }
    .liquor-shop__link {
      color: var(--color-secondary);
      text-decoration: none;
      &:hover {
        text-decoration: underline;
      }
    }
    .liquor-shop__number {
      display: inline-flex;
      justify-content: center;
      align-items: center;
      min-width: 2em;
      height: 1.7em;
      margin-right: var(--space-x2);
      border-radius: 5px;
      background-color: var(--color-secondary);
      font-weight: bold;
      color: white;
    }
  </style>