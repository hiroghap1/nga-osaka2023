        height: 300px;
        border: 1px solid #ddd;
        @media (min-width: 768px) {
            height: 400px;
        }
    }

    .store-image {
      display: grid;
      grid-template: "image1 image2" auto
    "image3 image2" auto
    / .55fr .45fr;
      gap: var(--space-x8);
      margin-top: var(--space-x10);
    }
    .store-image__figure {
      aspect-ratio: 1;
      height: auto;
      margin: 0;
      opacity: 0;
      box-shadow: 0px 3px 3px rgba(0,0,0,.4), 0px 8px 8px rgba(0,0,0,.15);
      &:nth-of-type(1) {
        grid-area: image1;
