        & > .store-visual {
          position: relative;

          &::before {
            content: '';
            position: absolute;
            inset: 0;
            display: block;
            background-color: rgba(0, 0, 0, .4);
            z-index: 1;
          }

          &::after {
            content: '出店中止';
            position: absolute;
            top: 50%;
            left: 50%;
            padding: var(--space-x2) var(--space-x8) calc(var(--space-x2) + 4px);
            border-radius: 10px;
            border: 3px solid;
            background-color: rgba(255, 255, 255, .85);
            font-weight: bold;
            font-size: 200%;
