    color: white;
      z-index: 1;
      transform: translateY(-50%);
      &::before,
      &::after {
          content: '';
          position: absolute;
          top: 5px;
          left: 5px;
          width: 100%;
          height: 100%;
          border: 1px solid white;
      }
      &::after {
          top: 6px;
          left: 6px;
          border-color: var(--color-sub-accent);
      }
  }
