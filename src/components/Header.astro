---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---
<header class="header">
  <div class="menu">
    <button type="button" id="menu-button" class="menu-button">
      <img class="menu-button__image" src="/assets/images/menu.png" alt="メニューを開く" width="247" height="234" decoding="async">
    </button>
  </div>
  <nav id="navigation" class="nav">
    <ul class="main-nav__list">
      <li class="main-nav__item">
        <a href="/" class="main-nav__link">
          <picture>
            <source srcset="/assets/images/icon-menu-home.svg" media="(min-width: 768px)" width="113" height="150">
            <img src="/assets/images/icon-home.svg" class="main-nav__image" alt="" width="24" height="24">
          </picture>
          <span class="main-nav__text">ホーム</span>
        </a>
      </li>
      <li class="main-nav__item">
        <a href="/store" class="main-nav__link">
          <picture>
            <source srcset="/assets/images/icon-menu-store.svg" media="(min-width: 768px)" width="" height="">
            <img src="/assets/images/icon-store.svg" class="main-nav__image" alt="" width="24" height="24">
          </picture>
          <span class="main-nav__text">参加店舗</span>
        </a>
      </li>
      <li class="main-nav__item">
        <a href="/liquor-shop" class="main-nav__link">
          <picture>
            <source srcset="/assets/images/icon-menu-sake.svg" media="(min-width: 768px)" width="" height="">
            <img src="/assets/images/icon-liquor.svg" class="main-nav__image" alt="" width="24" height="24">
          </picture>
          <span class="main-nav__text">協力酒販店</span>
        </a>
      </li>
      <li class="main-nav__item">
        <a href="/map" class="main-nav__link">
          <picture>
            <source srcset="/assets/images/icon-menu-map.svg" media="(min-width: 768px)" width="" height="">
            <img src="/assets/images/icon-map.svg" class="main-nav__image" alt="" width="24" height="24">
          </picture>
          <span class="main-nav__text">店舗地図</span>
        </a>
      </li>
      <li class="main-nav__item">
        <button type="button" class="main-nav__link" data-micromodal-trigger="modal-past">
          <picture>
            <source srcset="/assets/images/icon-menu-past.svg" media="(min-width: 768px)" width="84" height="150">
            <img src="/assets/images/icon-history.svg" class="main-nav__image" alt="" width="24" height="24">
          </picture>
          <span class="main-nav__text">過去のページ</span>
        </button>
      </li>
    </ul>
  </nav>
</header>

<div class="modal micromodal-slide" id="modal-past" aria-hidden="true">
  <div class="modal__overlay" tabindex="-1" data-micromodal-close>
    <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-past-title">
      <header class="modal__header">
        <h2 class="modal__title" id="modal-past-title">
          過去の日本酒ゴーアラウンド大阪公式サイト
        </h2>
      </header>
      <main class="modal__content" id="modal-past-content">
        <ul class="modal-past__list">
          <li class="modal-past__item">
            <a class="modal-past__link" href="https://2018.nga-osaka.com/" target="_blank">
              <img class="modal-past__image" alt="日本酒ゴーアラウンド大阪2018公式サイト" src="https://2018.nga-osaka.com/wp-content/uploads/2018/08/can_osaka-1.png" width="100" height="100" decoding="async">
              <span class="modal-past__text">2018</span>
            </a>
          </li>
          <li class="modal-past__item">
            <a class="modal-past__link" href="https://2019.nga-osaka.com/" target="_blank">
              <img class="modal-past__image" alt="日本酒ゴーアラウンド大阪2019公式サイト" src="/assets/images/badge-space-2019.png" width="100" height="100" decoding="async">
              <span class="modal-past__text">2019</span>
            </a>
          </li>
          <li class="modal-past__item">
            <a class="modal-past__link" href="https://2020.nga-osaka.com/" target="_blank">
              <img class="modal-past__image" alt="日本酒ゴーアラウンド大阪2020公式サイト" src="/assets/images/badge-osaka-2020.png" width="100" height="100" decoding="async">
              <span class="modal-past__text">2020</span>
            </a>
          </li>
          <li class="modal-past__item">
            <a class="modal-past__link" href="https://2021.nga-osaka.com/" target="_blank">
              <img class="modal-past__image" alt="日本酒ゴーアラウンド大阪2021公式サイト"  src="/assets/images/badge-osaka-2021.png" width="100" height="100" decoding="async">
              <span class="modal-past__text">2021</span>
            </a>
          </li>
          <li class="modal-past__item">
            <a class="modal-past__link" href="https://2022.nga-osaka.com/" target="_blank">
              <img class="modal-past__image" alt="日本酒ゴーアラウンド大阪2022公式サイト"  src="/assets/images/badge-osaka-2022.png" width="100" height="100" decoding="async">
              <span class="modal-past__text">2022</span>
            </a>
          </li>
        </ul>
      </main>
      <footer class="modal__footer">
        <button class="modal__close" aria-label="閉じる" data-micromodal-close></button>
      </footer>
    </div>
  </div>
</div>

<script>
  import MicroModal from 'micromodal';

  MicroModal.init({
    disableScroll: true,
  });

  const menuButton = document.getElementById('menu-button');
  const navigation = document.getElementById('navigation');
  menuButton.addEventListener('click',()=> {
    menuButton.classList.toggle('is-active');
    navigation.classList.toggle('is-active');
  });
</script>
<style lang="scss">
  .header {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    @media (min-width: 768px) {
      display: grid;
      place-items: center;
      width: 110px;
      position: fixed;
      bottom: 20px;
      right: 20px;
      left: unset;
    }
  }
  .nav {
    @media (min-width: 768px) {
      &.is-active {
        .main-nav__item {
          opacity: 1;
          visibility: visible;
          &:nth-of-type(1) {
            translate: -160px -30px;
          }
          &:nth-of-type(2) {
            translate: -140px -100px;
          }
          &:nth-of-type(3) {
            translate: -100px -170px;
          }
          &:nth-of-type(4) {
            translate: -30px -200px;
          }
          &:nth-of-type(5) {
            translate: 35px -210px;
          }
        }
      }
    }
  }
  .main-nav__list {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    margin: 0;
    @media (min-width: 768px) {
      position: relative;
      grid-template: "menu" max-content;
      place-items: center;
    }
  }
  .main-nav__item {
    padding-bottom: env(safe-area-inset-bottom);
    background-color: #f9f9f9;
    filter: drop-shadow(0 0 1px rgba(0,0,0,.15));
    &:not(:first-of-type) {
      border-left: 1px solid #ddd;
    }
    @media (min-width: 768px) {
      position: absolute;
      grid-area: menu;
      width: 50px;
      border: 0!important;
      background-color: transparent;
      filter: none;
      opacity: 0;
      visibility: hidden;
      transition: .15s opacity ease-out .15s, .3s translate ease-out;
      &::after {
        position: absolute;
        left: 0;
        right: 0;
        bottom: -10px;
        content: '';
        width: 80%;
        height: 6px;
        margin-inline: auto;
        background-image: radial-gradient(rgba(0,0,0,.15), transparent);
        border-radius: 50%;
      }
      &:hover {
        .main-nav__link:not(.disabled) {
          animation: swaying 1s infinite ease-in-out alternate;
        }
        &::after {
          animation: shadowSwaying 1s infinite ease-in-out alternate;
        }
      }
    }
  }
  @keyframes swaying{
    0%{
      transform: translateY(0);
    }
    100%{
      transform: translateY(-8px);
    }
  }
  @keyframes shadowSwaying{
    0%{
      transform: scale(1);
    }
    100%{
      transform: scale(0.5);
    }
  }

  .main-nav__link {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 60px;
    border: 0;
    background-color: transparent;
    text-decoration: none;
    font-size: 10px;
    color: var(--color-font);
    line-height: 1;
    cursor: pointer;
    &.disabled {
      opacity: .4;
      pointer-events: none;
    }
  }

  .main-nav__image {
    filter: contrast(0.6);
    @media (min-width: 768px) {
      filter: none;
      height: 40px;
      width: auto;
    }
  }
  .main-nav__text {
    margin-top: var(--space-x1);
  }
  .menu {
    display: none;
    @media (min-width: 768px) {
      display: block;
    }
  }
  .menu-button {
    position: relative;
    background-color: transparent;
    border: 0;
    cursor: pointer;
    &::before,
    &::after {
      content: '';
      display: inline-block;
      position: absolute;
      bottom: 100%;
      left: 0;
      opacity: 0;
      width: 90px;
      height: auto;
      aspect-ratio: 411/187;
      pointer-events: none;
    }
    &::before {
      rotate: -35deg;
      translate: -60% 40%;
      background: url(/assets/images/balloon-menu.png) no-repeat center/contain;
    }
    &::after {
      rotate: 5deg;
      translate: 30% -5%;
      background: url(/assets/images/balloon-open.png) no-repeat center/contain;
    }
    &:hover {
      &::before {
        animation: balloonIn 2s infinite linear;
      }
      &::after {
        animation: balloonIn 1.5s infinite linear .5s;
      }
    }
    &.is-active {
    &::before {
      rotate: 0deg;
      translate: 10% -10%;
      background: url(/assets/images/balloon-close.png) no-repeat center/contain;
      opacity: 1;
    }
    &::after {
      content: none;
    }
    }
  }

  @keyframes balloonIn {
    0% {opacity: 0}
    1% {opacity: 1}
    100% {opacity: 1}
  }



  /**************************\
Basic Modal Styles
\**************************/

  .modal {
    font-family: -apple-system,BlinkMacSystemFont,avenir next,avenir,helvetica neue,helvetica,ubuntu,roboto,noto,segoe ui,arial,sans-serif;
  }

  .modal__overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.8);
    display: flex;
    justify-content: center;
    align-items: flex-end;
    z-index: 10;
  }

  .modal__container {
    padding: 30px;
    max-width: 500px;
    max-height: 100vh;
    border-radius: 4px;
    overflow-y: auto;
    box-sizing: border-box;
  }

  .modal__header {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .modal__title {
    margin-top: 0;
    margin-bottom: 0;
    font-weight: 600;
    font-size: 1rem;
    line-height: 1.25;
    color: white;
    box-sizing: border-box;
  }

  .modal__close {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    margin-inline: auto;
    background: white;
    border-radius: 50%;
    border: 2px solid var(--color-sub-accent);
    &::before,
    &::after {
      position: absolute;
      content: '';
      background-color: var(--color-sub-accent);
      width: 60%;
      height: 2px;
      display: inline-block;
    }
    &::before {
      rotate: 45deg;
    }
    &::after {
      rotate: -45deg;
    }
  }

  .modal__header .modal__close:before { content: "\2715"; }

  .modal__content {
    margin-top: 1rem;
    margin-bottom: 2rem;
    line-height: 1.5;
    color: rgba(0,0,0,.8);
  }

  .modal__btn {
    font-size: .875rem;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: .5rem;
    padding-bottom: .5rem;
    background-color: #e6e6e6;
    color: rgba(0,0,0,.8);
    border-radius: .25rem;
    border-style: none;
    border-width: 0;
    cursor: pointer;
    -webkit-appearance: button;
    text-transform: none;
    overflow: visible;
    line-height: 1.15;
    margin: 0;
    will-change: transform;
    -moz-osx-font-smoothing: grayscale;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
    transition: -webkit-transform .25s ease-out;
    transition: transform .25s ease-out;
    transition: transform .25s ease-out,-webkit-transform .25s ease-out;
  }

  .modal__btn:focus, .modal__btn:hover {
    -webkit-transform: scale(1.05);
    transform: scale(1.05);
  }

  .modal__btn-primary {
    background-color: #00449e;
    color: #fff;
  }



  /**************************\
    Demo Animation Style
  \**************************/
  @keyframes mmfadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes mmfadeOut {
    from { opacity: 1; }
    to { opacity: 0; }
  }

  @keyframes mmslideIn {
    from { transform: translateY(15%); }
    to { transform: translateY(0); }
  }

  @keyframes mmslideOut {
    from { transform: translateY(0); }
    to { transform: translateY(-10%); }
  }

  .micromodal-slide {
    display: none;
  }

  .micromodal-slide.is-open {
    display: block;
  }

  .micromodal-slide[aria-hidden="false"] .modal__overlay {
    animation: mmfadeIn .3s cubic-bezier(0.0, 0.0, 0.2, 1);
  }

  .micromodal-slide[aria-hidden="false"] .modal__container {
    animation: mmslideIn .3s cubic-bezier(0, 0, .2, 1);
  }

  .micromodal-slide[aria-hidden="true"] .modal__overlay {
    animation: mmfadeOut .3s cubic-bezier(0.0, 0.0, 0.2, 1);
  }

  .micromodal-slide[aria-hidden="true"] .modal__container {
    animation: mmslideOut .3s cubic-bezier(0, 0, .2, 1);
  }

  .micromodal-slide .modal__container,
  .micromodal-slide .modal__overlay {
    will-change: transform;
  }

  .modal-past__list {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
  }
  .modal-past__item {
    animation: fadeInBouce .5s ease-out both;
    &:nth-of-type(2) {
      animation-delay: .1s;
    }
    &:nth-of-type(3) {
      animation-delay: .2s;
    }
    &:nth-of-type(4) {
      animation-delay: .3s;
    }
    &:nth-of-type(5) {
      animation-delay: .4s;
    }
  }
  .modal-past__link {
    display: block;
    padding: var(--space-x1);
    color: white;
    text-decoration: none;
    text-align: center;
  }
  .modal-past__image {
    width: 80px;
    height: auto;
  }
  @keyframes fadeInBouce {
    0%   { transform: scale(1.1, 1.1) translate(0%, 50%); opacity: 0}
    40%  { transform: scale(0.9, 1.2) translate(0%, -30%); opacity: 1}
    60%  { transform: scale(1, 1) translate(0%, -40%);  opacity: 1}
    80%  { transform: scale(0.9, 1.1) translate(0%, -5%); }
    90%  { transform: scale(1.1, 0.9) translate(0%, 0%); }
    100%  { transform: scale(1, 1) translate(0%, 0%); }
  }
</style>